<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="parentViewSmallPadding">
        <item name="android:padding">@dimen/size_10dp</item>
    </style>

    <style name="parentViewMediumPadding" >
        <item name="android:padding">@dimen/size_16dp</item>
    </style>

    <style name="parentViewLargePadding">
        <item name="android:padding">@dimen/size_22dp</item>
    </style>

    <style name="extraLargeFont">
        <item name="android:textSize">@dimen/size_20dp</item>
    </style>

    <style name="largeFont" >
        <item name="android:textSize">@dimen/text_size_17sp</item>
    </style>

    <style name="largeMediumFont" >
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="mediumFont">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="smallFont" >
        <item name="android:textSize">@dimen/text_size_10sp</item>
    </style>

    <style name="verySmallFontStyle" >
        <item name="android:textSize">@dimen/text_size_8sp</item>
    </style>

    <style name="extraLargeTextViewStyle" parent="extraLargeFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="largeTextViewStyle" parent="largeFont" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="largeMediumFontTextViewStyle" parent="largeMediumFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mediumFontTextViewStyle" parent="mediumFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="smallFontTextViewStyle" parent="smallFont" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="verySmallFontTextViewStyle" parent="verySmallFontStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="textInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textInputEditTextStyle" parent="mediumFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="regular_font">
        <item name="fontStyle">normal</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="bold_font" tools:keep="@style/bold_font">
        <item name="fontFamily">@font/worksans_bold</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="semibold_font">
        <item name="fontFamily">@font/worksans_semibold</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">600</item>
    </style>

    <style name="mediumbold_font">
        <item name="fontFamily">@font/worksans_medium</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="normal_semibold_font" parent="semibold_font">
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="medium_regular_font" parent="regular_font">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="medium_bold_font" parent="bold_font">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="large_bold_font" parent="bold_font">
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="medium_semibold_font" parent="semibold_font">
        <item name="android:textSize">@dimen/text_size_17sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="medium_mediumbold_font" parent="mediumbold_font">
        <item name="android:textSize">@dimen/text_size_17sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="large_semibold_font" parent="semibold_font">
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextColor">@color/colorEditTextStroke</item>
        <item name="android:textColorHint">@color/colorEditTextStroke</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.TextInputLayout.Rounded
        </item>
        <item name="boxStrokeColor">@color/colorEditTextStroke</item>
    </style>


    <style name="ShapeAppearanceOverlay.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_10dp</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:radius">@dimen/size_100dp</item>
        <item name="android:drawablePadding">@dimen/size_10dp</item>
        <item name="android:padding">@dimen/size_15dp</item>
        <item name="android:textColorHint">@color/colorGrayIconTint</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/size_16dp</item>
        <item name="android:drawablePadding">@dimen/size_10dp</item>
        <item name="android:padding">@dimen/size_10dp</item>
        <item name="android:textSize">@dimen/size_16dp</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:textColorHint">@color/colorEditTextStroke</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:textColorHint">@color/colorEditTextStroke</item>
    </style>


    <style name="dropDownStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/size_16dp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxCornerRadiusBottomStart">@dimen/size_10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/size_10dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/size_10dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/size_10dp</item>
    </style>

    <style name="primaryButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/size_60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/worksans_semibold</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="topCornerView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners_top</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners_top">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/size_30dp</item>
        <item name="cornerSizeTopRight">@dimen/size_30dp</item>
        <item name="cornerSizeBottomLeft">@dimen/size_0dp</item>
        <item name="cornerSizeBottomRight">@dimen/size_0dp</item>
    </style>

</resources>