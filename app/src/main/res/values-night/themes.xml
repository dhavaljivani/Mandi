<resources >
    <!-- Base application theme. -->
    <style name="Theme.MandiApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="background">@color/colorDarkBackground</item>
        <item name="editTextColor">@color/white85</item>
        <item name="disable_edittext_hintColor">@color/lightGrey</item>
        <item name="background2">?attr/background</item>
        <item name="cardColor">@color/cardBackground</item>
    </style>
</resources>